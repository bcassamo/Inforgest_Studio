<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/files_products"
        android:textAllCaps="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_files_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:padding="8dp"
                    android:id="@+id/btnProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="productFilesOption"
                    android:text="@string/btnProduct" />


                <Button
                    android:padding="8dp"
                    android:id="@+id/btnProdExist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btnProdExist" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:padding="8dp"
                    android:id="@+id/btnProdPrices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onBtnGroupClick"
                    android:text="@string/btnProdPrices" />

                <Button
                    android:padding="8dp"
                    android:id="@+id/btnExtraProd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onBtnCurUnitClick"
                    android:text="@string/btnExtraProd" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:padding="8dp"
            android:id="@+id/btnConfWhereHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_files_products"
            android:layout_centerHorizontal="true"
            android:text="@string/btnConfWhereHouse" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/acerto_stock"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnProdSetStock"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnProdSetStock" />

        <Button
            android:id="@+id/btnProdsearchSettl"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBtnGroupClick"
            android:text="@string/btnProdsearchSettl" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/inventory"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnProdInventory"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnProdInventory" />

        <Button
            android:id="@+id/btnProdSearchinventory"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBtnGroupClick"
            android:text="@string/btnProdSearchinventory" />

    </LinearLayout>

</LinearLayout>